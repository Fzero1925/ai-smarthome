        print(f"📊 Saved keyword analysis for {len(used_keywords)} articles")
    
    print(f"🎉 Successfully generated {len(generated_files)} articles")
    return len(generated_files) > 0

if __name__ == "__main__":
    success = main()
    sys.exit(0 if success else 1)

