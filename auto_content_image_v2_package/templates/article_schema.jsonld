{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ title }}",
  "datePublished": "{{ date }}",
  "dateModified": "{{ lastmod }}",
  "author": {
    "@type": "Person",
    "name": "{{ author }}"
  },
  "image": [
    "{{ featured_image }}"
  ],
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ permalink }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "AI Smart Home Hub"
  },
  "about": "{{ category }}",
  "isPartOf": {
    "@type": "CreativeWorkSeries",
    "name": "Buying Guides"
  },
  "potentialAction": {
    "@type": "ReadAction",
    "target": "{{ permalink }}"
  }
}